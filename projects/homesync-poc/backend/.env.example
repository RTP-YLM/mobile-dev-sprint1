# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server
PORT=3000
NODE_ENV=development

# MQTT - HiveMQ Cloud
# Sign up at https://www.hivemq.com/mqtt-cloud/
MQTT_BROKER_URL=mqtts://your-cluster.hivemq.cloud:8883
MQTT_USERNAME=your-hivemq-username
MQTT_PASSWORD=your-hivemq-password
MQTT_CLIENT_ID=homesync-poc-backend

# InfluxDB
# Use InfluxDB Cloud free tier or local Docker
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=homesync
INFLUXDB_BUCKET=poc_telemetry

# PostgreSQL (Optional for POC)
DATABASE_URL=postgresql://user:password@localhost:5432/homesync
